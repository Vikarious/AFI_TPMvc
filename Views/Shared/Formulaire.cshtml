
@model TPLOCAL1.Models.FormulaireModel
@{
    ViewData["Title"] = "Formulaire";
}

<!DOCTYPE html>
<html>
<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
    </header> 
    <nav> 
        <ul>
            <li><a href="/Home/Index/Index">Acceuil</a></li>
            <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>
    @using (Html.BeginForm("ValidationFormulaire", "Home", FormMethod.Post))
    {
    <table>
        <caption align="top">
            Informations Candidat
        </caption>
            <tr>
                <td>
                    Nom
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Name)
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Prénom
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Firstname)
                    @Html.ValidationMessageFor(m => m.Firstname, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Sexe
                </td>
                <td>
                    @Html.DropDownListFor(m => m.Sex, new List<SelectListItem>
                    { new SelectListItem{Text="Homme", Value="Homme"},
                      new SelectListItem{Text="Femme", Value="Femme"}, 
                      new SelectListItem{Text="Autre", Value="Autre"}}, 
                      "Selectionner un sexe")
                    @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "error" })
                </td>
                
            </tr>
            <tr>
                <td>
                    Adresse
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Adress)
                    @Html.ValidationMessageFor(m => m.Adress, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Code Postal
                </td>
                <td>
                    @Html.TextBoxFor(m => m.PostalCode)
                    @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Ville
                </td>
                <td>
                    @Html.TextBoxFor(m => m.City)
                    @Html.ValidationMessageFor(m => m.City, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Adresse mail
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Mail)
                    @Html.ValidationMessageFor(m => m.Mail, "", new { @class = "error" })
                </td>
            </tr>
       
    </table>
    <table>
        <caption align="top">
            Formation suivie par le candidat
        </caption>
       
        <tr>
            <td>
                Date de début de formation
            </td>
            <td>
                    @Html.TextBoxFor(m => m.StartFormation)
                    @Html.ValidationMessageFor(m => m.StartFormation, "", new { @class = "error" })
            </td>
        </tr>
        <tr>
            <td>
                Formation suivie
            </td>
            <td>
                @Html.DropDownListFor(m => m.FormationType, new List<SelectListItem>
                { new SelectListItem{Text="Formation Cobol", Value="Formation Cobol"},
                  new SelectListItem{Text="Formation Objet", Value="Formation Objet"},
                  new SelectListItem{Text="Formation double compétence", Value="Formation double compétence"}}, "Selectionner une formation")
                @Html.ValidationMessageFor(m => m.FormationType, "", new { @class = "error" })
            </td>
        </tr>
        
    </table>
    <table>
        <caption align="top">
            Avis sur la formation
        </caption>
            <tr>
                <td>
                    Formation Cobol
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Cobol)
                    @Html.ValidationMessageFor(m => m.Cobol, "", new { @class = "error" })
                 </td>
            </tr>
            <tr>
                <td>
                    Formation C#
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Csharp)
                    @Html.ValidationMessageFor(m => m.Csharp, "", new { @class = "error" })
                 </td>
            </tr>
            
    </table>
        <input type="submit" class="submit_button" name="submit" value="Valider" />
    }
</body>
</html>
@{
    Layout = null;
}