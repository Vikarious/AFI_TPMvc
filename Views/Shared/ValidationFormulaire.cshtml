
@model TPLOCAL1.Models.FormulaireModel

@{
    ViewData["Title"] = "ValidationFormulaire";
}
<!DOCTYPE html>
<html>
<head>
    <title>Page de Validation</title>
    <link rel="stylesheet" href="~/ressources/Index.css" />
</head>
<body>
    <header>
        <img src="~/ressources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de validation</h1>
    </header>
    <nav>
        <ul>
            <li><a href="/Home/Index/Index">Acceuil</a></li>
            <li><a href="/Home/Index/Listeavis">Liste avis</a></li>
        </ul>
    </nav>

    <p>Votre demande a été prise en compte.</p>

    @{
        var formulaire = ViewData["Formulaire"] as formulaire;
    }
    <table>
        <caption align="top">
            Informations candidat
        </caption>
        <tr>
            <td>Nom</td>
            <td>@formulaire.Name</td>
        </tr>
        <tr>
            <td>Prénom</td>
            <td>@formulaire.Firstname</td>
        </tr>
        <tr>
            <td>Sexe</td>
            <td>@formulaire.Sex</td>
        </tr>
        <tr>
            <td>Adresse</td>
            <td>@formulaire.Adress</td>
        </tr>
        <tr>
            <td>Code Postal</td>
            <td>@formulaire.PostalCode</td>
        </tr>
        <tr>
            <td>Ville</td>
            <td>@formulaire.City</td>
        </tr>
        <tr>
            <td>Adresse mail</td>
            <td>@formulaire.Mail</td>
        </tr>
    </table>
    <table>
        <caption align="top">
            Informations formation suivie
        </caption>
        <tr>
            <td>Date début formation</td>
            <td>@formulaire.StartFormation</td>
        </tr>
        <tr>
            <td>Formation suivie</td>
            <td>@formulaire.FormationType</td>
        </tr>
    </table>
    <table>
        <caption align="top">
            Avis formation
        </caption>
        <tr>
            <td>Formation Cobol</td>
            <td>@formulaire.Cobol</td>
        </tr>
        <tr>
            <td>Formation C#</td>
            <td>@formulaire.Csharp</td>
        </tr>
    </table>
</body>
</html>

@{
    Layout = null;
}